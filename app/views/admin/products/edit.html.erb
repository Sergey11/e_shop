<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
 <%=form_for  @product, url: admin_product_path do |f| %>
      <p>

       <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :description %>
        <%= f.text_area :description %>

        <%= f.label :fetures %>
        <%= f.text_area :fetures %>

        <%= image_tag @product.foto.url %>
        <%= f.label :foto %>
        <%= f.file_field :foto %>
        <%= f.hidden_field :foto_cache %><br /><br />


       <%= f.submit "Update product", class: "btn btn-large btn-primary" %>
      </p>
    <% end %>

  </div>
</div>
