<% provide(:title, "Sign in") %>
 <div class="content">
      <div class="container">
        <div class="page-header">
          <h1>Signin to Bootbusiness</h1>

        </div>
        <div class="row">
          <div class="span6 offset3">
            <h4 class="widget-header"><i class="icon-lock"></i> Signin to Bootbusiness</h4>
            <div class="widget-body">
              <div class="center-align">

              
              <%= form_for(@user, url: user_path(current_user), class: "form-horizontal form-signin-signup", :html => {:method => :patch}) do |f| %>
            
                <%= f.password_field :password  , placeholder: "Password" %><br>

                <%= f.password_field :password_confirmation, placeholder: "Password" %><br>

                <%= f.submit "Save password", class: "btn btn-large btn-primary" %>

                <% end %>
              
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>